				<script type="text/javascript">
					(function(){
						var tag = document.getElementById("J_densy"),
						ctx = tag.getContext("2d"),
						count = 0,
						i;
						//è®¾ç½®å¡???????						//ctx.fillStyle="#ff0000";
						//è®¾ç½®è½??é¢??
						//ctx.strokeStyle="#000";
						//ç»??ä¸?¸ª?©å½¢
						//ctx.fillRect(0,0,80,100);
						//å°???¹ç§»?°ä¸­å¿?						
						function drawItem(){
							ctx.save();
							ctx.translate(tag.width/2,tag.height/2);
							ctx.rotate(Math.PI*count/(6));
							count++;
							for(i=0; i<12; i++){
								var color = parseInt(255*(20-i)/20).toString(16);
								ctx.fillStyle = '#'+color+color+color;
								ctx.rotate(Math.PI/(6));
								ctx.fillRect(-1,-10,2,5);
							} 
							ctx.restore();
						}
						setInterval(function(){
							tag.width = tag.width;
							drawItem();
						},80);
					})();
				</script>
