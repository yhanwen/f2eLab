			</header>
			<div>
				菊花：
				<canvas id="J_densy" width=30 height=30></canvas>
				<script type="text/javascript">
					(function(){
						var tag = document.getElementById("J_densy"),
						ctx = tag.getContext("2d"),
						count = 0,
						edges = 10,
						i;
						
						function drawItem(){
							ctx.save();
							ctx.translate(tag.width/2,tag.height/2);
							ctx.rotate(Math.PI*count/(edges/2));
							count++;
							for(i=0; i<edges; i++){
								var color = (i)/edges;
								ctx.fillStyle = "rgba(90,154,214,"+color+")";
								ctx.rotate(Math.PI/(edges/2));
								ctx.fillRect(-1,-10,2,5);
							} 
							ctx.restore();
						}
						drawItem();
						setInterval(function(){
							//tag.width = tag.width;
							
						},60);
					})();
				</script>
			</div>
